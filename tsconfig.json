{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": [
            "ES6",
            "ESNext",
            "DOM"
        ],
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "dist",
        "moduleResolution": "NodeNext",
        "pretty": true,
        "skipLibCheck": true,
        "strict": false,
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "module": "ES6",
            "esModuleInterop": true
        }
    }
}